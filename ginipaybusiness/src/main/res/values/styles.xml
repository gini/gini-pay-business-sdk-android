<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GiniPay" />

    <style name="Root" />
    <!-- Root styles shouldn't be overridden, instead override their descendant styles -->
    <style name="Root.GiniPay" />

    <style name="Root.GiniPay.PaymentInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="boxStrokeColor">@color/gpb_input_box_stroke_color</item>
        <item name="boxBackgroundColor">@color/gpb_input_box_background_color</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Style for TextInputLayouts in ReviewFragment -->
    <style name="GiniPay.PaymentInputLayoutStyle" parent="Root.GiniPay.PaymentInputLayoutStyle" />

    <style name="Root.GiniPay.PaymentInputStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Style for TextInputEditTexts in ReviewFragment -->
    <style name="GiniPay.PaymentInputStyle" parent="Root.GiniPay.PaymentInputStyle" />

    <style name="Root.GiniPay.PaymentInputStyle.Amount">
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Style for the amount TextInputEditText in ReviewFragment -->
    <style name="GiniPay.PaymentInputStyle.Amount" parent="Root.GiniPay.PaymentInputStyle.Amount" />

    <style name="Root.GiniPay.CurrencyStyle">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Style for the currency sign of the amount field in ReviewFragment -->
    <style name="GiniPay.CurrencyStyle" parent="Root.GiniPay.CurrencyStyle" />

    <!-- Style for the ViewPager2 that displays the pages of the document in ReviewFragment -->
    <style name="GiniPay.DocumentPagerStyle" />

    <style name="GiniPay.DocumentListStyle" />

    <style name="Root.GiniPay.PagePhotoStyle">
        <item name="android:paddingTop">@dimen/gpb_page_padding_top</item>
    </style>

    <!-- Style for ImageView that displays the page of a document in ReviewFragment -->
    <style name="GiniPay.PagePhotoStyle" parent="Root.GiniPay.PagePhotoStyle" />

    <style name="Root.GiniPay.PageIndicatorStyle">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for the page indicator under the ViewPager in ReviewFragment -->
    <style name="GiniPay.PageIndicatorStyle" parent="Root.GiniPay.PageIndicatorStyle" />

    <style name="Root.GiniPay.PageErrorText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style for error text that is displayed when loading a page fails -->
    <style name="GiniPay.PageErrorText" parent="Root.GiniPay.PageErrorText" />

    <!-- Style for retry button that is displayed when loading a page fails -->
    <style name="GiniPay.PageErrorRetry" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="Root.GiniPay.PaymentDetailsCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gpb_payment_details_background</item>
        <item name="elevation">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- Style for the Payment Details card in ReviewFragment -->
    <style name="GiniPay.PaymentDetailsCard" parent="Root.GiniPay.PaymentDetailsCard" />

    <style name="Root.GiniPay.BankButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:drawableLeft">@drawable/ic_bank</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="layout_constraintHorizontal_weight">.4</item>
    </style>

    <!-- Style for the bank button in ReviewFragment -->
    <style name="GiniPay.BankButtonStyle" parent="Root.GiniPay.BankButtonStyle" />

    <style name="Root.GiniPay.PaymentButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/gpb_payment_button_spacing</item>
        <item name="backgroundTint">@color/gpb_payment_button_background</item>
        <item name="layout_constraintHorizontal_weight">.6</item>
    </style>

    <!-- Style for Pay button in ReviewFragment -->
    <style name="GiniPay.PaymentButtonStyle" parent="Root.GiniPay.PaymentButtonStyle" />

    <style name="Root.GiniPay.PaymentButtonProgressStyle">
        <item name="android:padding">8dp</item>
        <item name="android:translationZ" tools:targetApi="lollipop">100dp</item>
    </style>

    <!-- Style for the progress indicator that is displayed on top of the Pay button in ReviewFragment -->
    <style name="GiniPay.PaymentButtonProgressStyle" parent="Root.GiniPay.PaymentButtonProgressStyle" />

</resources>